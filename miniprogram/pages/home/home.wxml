<view class="home">
  <view class="login" wx:if="{{!loggedIn}}">
    <text>登录后可查看历史记录</text>
    <button size="mini" bindtap="login">微信一键登录</button>
  </view>
  <view class="title">可用测试</view>
  <block wx:for="{{tests}}" wx:key="id">
    <view class="card" bindtap="enter" data-path="{{item.entryPath}}">
      <view class="name">{{item.name}}</view>
      <view class="desc">{{item.desc}}</view>
    </view>
  </block>

  <view class="links">
    <navigator url="/pages/about/about">关于与声明</navigator>
  </view>
</view>
