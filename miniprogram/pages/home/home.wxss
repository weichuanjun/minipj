.home { padding: 14px; background: linear-gradient(180deg, #FFF8F1 0%, #FFFFFF 100%); min-height: 100vh; }
.topbar { position: relative; display: flex; align-items: center; justify-content: center; margin-bottom: 12px; }
.headline {
  font-size: 17px;         /* 稍微小一点更精致 */
  font-weight: 600;        /* 从700降到600，字体更柔和 */
  color: #5a5555;          /* 改为偏灰粉色调，减少硬度 */
  text-align: center;
  letter-spacing: 0.5px;   /* 稍微拉开字距，更轻盈 */
  line-height: 1.6;        /* 提升呼吸感 */
  margin: 20rpx 0;         /* 与上下内容保持柔和间距 */
  flex: 1;
}
.about { position: absolute; right: 0; top: 50%; transform: translateY(-50%); font-size: 18px; line-height: 24px; padding: 4px 8px; border-radius: 10px; background: #ffffff; border: 1px solid #F7DDE1; box-shadow: 0 6px 18px rgba(255,200,200,0.12); }

.login { display: flex; justify-content: space-between; align-items: center; background: #ffffff; border-radius: 14px; padding: 10px 12px; box-shadow: 0 8px 24px rgba(255, 200, 200, 0.12); border: 1px solid #F7DDE1; margin-bottom: 12px; color: #6b6b6b; }

.grid { display: grid; grid-template-columns: 1fr 1fr; column-gap: 12px; row-gap: 12px; }
.card { width: 100%; background: #ffffff; border-radius: 16px; overflow: hidden; box-shadow: 0 8px 24px rgba(180,200,255,0.12); border: 1px solid #DCEBFF; }
.thumb { position: relative; width: 100%; padding-top: 100%; background: linear-gradient(135deg, #FFE6EA 0%, #E9F0FF 100%); }
.img { position: absolute; left: 0; top: 0; width: 100%; height: 100%; border-radius: 0; }
.overlay { position: absolute; left:0; top:0; right:0; bottom:0; background: linear-gradient(180deg, rgba(255,255,255,0) 40%, rgba(255,248,241,0.8) 100%); }
.ribbon { position: absolute; right: 6px; top: 6px; background: #85A9F0; color: #fff; font-size: 12px; padding: 2px 6px; border-radius: 999px; box-shadow: 0 2px 8px rgba(133,169,240,0.35); }
.ct { padding: 10px 10px 12px; }
.ct .title { font-size: 14px; font-weight: 600; color: #4f5560;text-align: center; }
