.home { padding: 16px; background: linear-gradient(180deg, #FFF8F1 0%, #FFFFFF 100%); min-height: 100vh; }
.login { display: flex; justify-content: space-between; align-items: center; background: #ffffff; border-radius: 14px; padding: 10px 12px; box-shadow: 0 8px 24px rgba(255, 200, 200, 0.12); border: 1px solid #F7DDE1; margin-bottom: 12px; color: #6b6b6b; }
.title { font-size: 18px; font-weight: 700; margin: 8px 0 12px; color: #594c4c; }
.card { background: #ffffff; border-radius: 16px; padding: 14px; margin-bottom: 12px; box-shadow: 0 8px 24px rgba(180,200,255,0.12); border: 1px solid #DCEBFF; }
.name { font-size: 16px; font-weight: 600; color: #4f5560; }
.desc { font-size: 13px; color: #7a7a7a; margin-top: 6px; }
.links { text-align: center; color: #8a7f7f; margin-top: 22px; }
.links navigator { color: #85A9F0; }
